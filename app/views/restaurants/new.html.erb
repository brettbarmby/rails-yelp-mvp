<div class='container'>
  <h1>Create a Restaurant</h1>
  <%= simple_form_for (@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, as: :select, collection: ["Chinese", "Italian", "Japanese", "French", "Belgian"] %>
  <div class="buttons">
    <%= f.submit class: "btn btn-primary"%>
  <% end %>
    <%= link_to "Home", restaurants_path, class: "btn btn-primary" %>
  </div>
</div>
